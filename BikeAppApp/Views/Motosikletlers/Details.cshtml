@model BikeAppApp.Models.Motosikletler

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_LayoutProje.cshtml";
}

<h1>Details</h1>

<div>
    <h4>Motosikletler</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Marka)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Marka)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Model)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Model)
        </dd>
        @if (!string.IsNullOrEmpty(Model.FotoğrafYolu))
        {
            <dt class="col-sm-2">
                Fotoğraf
            </dt>
            <dd class="col-sm-10">
                <img src="@Model.FotoğrafYolu" alt="Motosiklet Fotoğrafı" style="max-width: 100%; height: auto;" />
            </dd>
        }
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.MotosikletId">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
