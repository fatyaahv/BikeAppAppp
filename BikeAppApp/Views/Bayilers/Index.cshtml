@model IEnumerable<BikeAppApp.Models.Bayiler>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_LayoutProje.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.BayiAdi)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Adres)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.BayiAdi)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Adres)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.BayiId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.BayiId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.BayiId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
